.header-row {
  background-color: $dark;
  margin-bottom:7px;
  margin-left:0px;
  margin-right:0px;
  display: flex;
}

.banner-navbar-container {
  width:100%
}

.banner-container {
  height:145px;
}
@include media-breakpoint-down(sm) {
  .banner-container {
    height: 100px;
  }
}

.logo-container {
  width: 105px;
  margin: 5px;
}
@include media-breakpoint-down(sm) {
  .logo-container {
    width: 80px;
  }
}

.navbar{
  margin-top:0px;
  padding-top:10px;
}
.navbar-toggler-right{
  top:0px;
}
.navbar a {
  padding-top:0px;
  padding-bottom:0px;
  font-size: 1rem;
  color:#dddddd !important;
}
@include media-breakpoint-down(md) {
  .navbar a {
    font-size:0.8rem;
  }
}
.show > .dropdown-menu {
  background-color: $dark;
}
.navbar a:hover, .navbar a:focus {
  color: $light !important;
  text-decoration: none;
  background-color: $dark;
}
.active a {
  color: white !important;
}

.logo{
  width:105px;
  height:150px;
  background: url(<%= asset_data_uri 'logo/eclogo150.png' %>) left top no-repeat;
}
@include media-breakpoint-down(sm) {
  .logo{
    background: url(<%= asset_data_uri 'logo/eclogo-sm.png' %>) left top no-repeat;
    width:80px;
    height:110px;
  }
}


.tagline {
  color: $light;
  font-size: 13px;
  padding-left: 5px;
  font-family: 'Montserrat', sans-serif;
  line-height: 1em;
  padding-bottom: 5px;
  text-align: center;
}
@include media-breakpoint-down(sm) {
  .tagline {
    font-size:10px;
  }
}

.banner-title {
  font-size: 80px;
  color: $brand-primary;
  line-height: 70px;
  margin-left: 0px;
  padding-top: 10px;
  font-family: 'Montserrat', sans-serif;
  font-weight: bold;
}

.banner-subtitle {
  font-size: 30px;
  color: $light;
  margin-left: 5px;
  line-height: 30px;
  font-family: 'Montserrat', sans-serif;
  font-weight: bold;
}

@include media-breakpoint-down(md) {
  .banner-title {
    font-size: 60px;
    line-height: 60px;
  }
  .banner-subtitle {
    font-size: 20px;
    line-height: 20px;
  }
}
@include media-breakpoint-down(sm) {
  .banner-title {
    font-size: 35px;
    line-height: 30px;
  }
  .banner-subtitle {
    font-size: 14px;
    line-height: 14px;
  }
}

#search_field{
  padding:3px;
  width:100px;
}
#search_button{
  height: 25px;
  width: 70px;
  padding-top: 2px;
  padding-bottom: 3px;
  padding-left: 10px;
  color: $light;
  border-color: $light;
}

#track{
  position: absolute;
  right: 0px;
}

#dates-larger {
  border-radius: 8px;
  text-align: right;
  color: $brand-primary;
  font-family: 'Montserrat', sans-serif;
  font-weight: bold;
  font-size: 1.3rem;
  line-height: 1.4rem;
  position: absolute;
  top: 90px;
  right: 12px;
  background: $dark;
  padding: 4px;
  z-index: 2;
}

.banner-img {
  overflow: hidden;
  height: 145px;
}
.banner-img img {
  width:100%
}

.search-txt {
  padding: 4px;
  width: 160px !important;
  margin-left: 3px;
}

.search-btn {
  line-height: 1rem;
  padding: 4px;
  background: $light;
  font-size: 0.8rem;
  color: $dark;
}
