<%
  @major_sponsors=charge.charge_sponsors.major.order("RANDOM()").limit(6)
  @standard_sponsors=charge.charge_sponsors.standard.order("RANDOM()")
  @cp_sponsors=charge.sponsors.order("RANDOM()")
%>
<div class="row">
  <% @major_sponsors.each do |sp| %>
      <%= render :partial => 'sponsors/charge_sponsor', :locals => {:sponsor => sp} %>
  <% end %>
</div>
<div class="row">
  <% @cp_sponsors.each do |sp| %>
      <%= render :partial => 'sponsors/charge_sponsor', :locals => {:sponsor => sp} %>
  <% end %>
</div>
<div class="row">
  <% @standard_sponsors.each do |sp| %>
      <%= render :partial => 'sponsors/charge_sponsor', :locals => {:sponsor => sp} %>
  <% end %>
</div>