<div class="row">
  <% @makes.each_with_index do |m, i| %>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 ">
      <div class="card">
        <div class="card-header">
          <h5 style="display:inline-block;"><%= m.name %></h5>
        </div>
        <div class="card-block">
          <div class="col-lg-3">
            <div class="image-container">
              <%
                photo=m.photos.order("RANDOM()").first
              %>
              <%= image_tag photo.photo(:thumb), :class => 'rounded' %>
            </div>
          </div>
          <div class="col-lg-9">
            <%
              m.teams.distinct.each do |team|
            %>
                <%= team.name %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <% if (i+1)%2==0 %>
        </div>
        <div class="clearfix hidden-sm-up"></div>
        <div class="row">
    <% end %>
  <% end %>
</div>
