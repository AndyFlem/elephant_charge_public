<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-8 col-xl-6">
      <div class="card">
        <div class="card-header">
          <h5><b>Search results for:</b> <%= params[:q]%> (<%= @search.total%> found)</h5>
        </div>
        <div class="card-block">
          <% @results.each do |result| %>
            <div class="card">
              <% if result.class==Charge %>
                  <%= render :partial => '/search/charge', :locals => {:charge => result} %>
              <% end %>
              <% if result.class==Team %>
                  <%= render :partial => '/search/team', :locals => {:team => result} %>
              <% end %>
              <% if result.class==Beneficiary %>
                  <%= render :partial => '/search/beneficiary', :locals => {:ben=> result} %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>