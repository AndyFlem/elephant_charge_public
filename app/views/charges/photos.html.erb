<% title(@charge.long_name) %>

<% breadcrumb [["charges","Charges"],[charge_path(@charge).sub!('/',''),'Elephant Charge ' + @charge.ref],[charge_photos_path(@charge).sub!('/',''),'Photos']] %>

<div class="container-fluid">
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-header">
          <h5 style="display:inline-block;"><%= @charge.long_name %></h5>
          <div style="float:right;display: block;">
            <a data-toggle="tooltip" data-placement="top" title="Results" href="<%= charge_path(@charge) %>"><img style="margin-left:10px;" src="<%= image_path('icons/grey/results.png') %>"></a>
            <a data-toggle="tooltip" data-placement="top" title="Teams" href="<%= charge_entries_path(@charge) %>"><img style="margin-left:10px;" src="<%= image_path('icons/grey/car.png') %>"></a>
            <a data-toggle="tooltip" data-placement="top" title="Photo Gallery" href="<%= charge_photos_path(@charge) %>"><img style="margin-left:10px;" src="<%= image_path('icons/color/camera.png')%>"></a>
          </div>
        </div>
        <div class="card-block">
          <div class="container-fluid">
            <div class="row">
              <% @charge.photos.each do |photo| %>
                  <div style="padding:5px; " class="col-xs-12 col-sm-6 col-md-4 col-lg-3 col-xl-2">
                    <a href="/photo/<%=photo.id%>?return=<%= charge_photos_path(@charge) %>"><img style="max-width:100%;" class="rounded mx-auto d-block" src="<%= image_path(photo.photo(:medium))%>"></a>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="card-block">
          <% @entries.each do |entry| %>
              <div class="container-fluid">
                <div class="row">
                  <div class="col">
                    <div class="card">
                      <div class="card-header">
                        <a href="<%= entry_path(entry)%>"><h6><%= entry.team.long_name %></h6></a>
                      </div>
                      <div class="card-block">
                        <div class="container-fluid">
                          <div class="row">
                            <% entry.photos.each do |photo| %>
                                <div style="padding:5px; " class="col-xs-12 col-sm-6 col-md-4 col-lg-3 col-xl-2">
                                  <a href="/photo/<%=photo.id%>"><img style="max-width:100%;" class="rounded mx-auto d-block" src="<%= image_path(photo.photo(:medium))%>"></a>
                                </div>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>