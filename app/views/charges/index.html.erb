<% title('Charges') %>

<div class="container-fluid">
  <div class="row">

<div class="col-lg-8">
  <% @charges.each do |charge| %>
      <div class="card">
        <div class="card-header">
          <a href="<%= charge_path(charge)%>"><h5 style="display: inline-block;"><%= charge.long_name %></h5></a>

          <div style="float:right;display: block;">
            <a data-toggle="tooltip" data-placement="top" title="Results"  href="<%=  charge_path(charge) %>"><img style="margin-left:10px;" src="<%= image_path('icons/grey/results.png')%>"></a>
            <a data-toggle="tooltip" data-placement="top" title="Teams" href="<%= charge_entries_path(charge)  %>"><img style="margin-left:10px;" src="<%= image_path('icons/grey/car.png')%>"></a>
          </div>
        </div>
        <div class="card-block">
          <%= render :partial => '/charges/chargeshort', :locals => {:charge => charge}  %>
        </div>
      </div>
  <% end %>
</div>

<div class="col-lg-4">
  <div class="card">
    <div class="card-block">
    <div id='map-charges' style="margin:auto;"
         data-center-lat="-15.5354"
         data-center-lon="28.9645"
         data-scale="7"></div>
  </div>
  </div>
</div>

  </div>
</div>
