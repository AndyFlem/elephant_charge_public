<div class="col-md-8">
  <% @charges.each do |charge| %>
      <div class="card">
        <div class="card-header">
          <a href="<%= charge_path charge.ref %>"><h5><%= charge.name + ' ' + charge.location %></h5></a>
        </div>
        <div class="card-block">
          <%= render :partial => '/charges/chargeshort', :locals => {:charge => charge}  %>
        </div>
      </div>
  <% end %>
</div>