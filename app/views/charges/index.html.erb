<div class="container-fluid">
  <div class="row">

<div class="col-lg-8">
  <% @charges.each do |charge| %>
      <div class="card">
        <div class="card-header">
          <h5 style="display: inline-block;"><%= charge.long_name %></h5>
          <span style="float: right;"><a href="">Teams</a></span>
          <span style="float: right;padding-left: 10px;padding-right: 10px;"><a href="<%= charge_path(charge)%>">Results</a></span>
        </div>
        <div class="card-block">
          <%= render :partial => '/charges/chargeshort', :locals => {:charge => charge}  %>
        </div>
      </div>
  <% end %>
</div>

<div class="col-lg-4">
  <div class="card">
    <div class="card-block">
    <div id='map-charges' style="margin:auto;"
         data-center-lat="-15.5354"
         data-center-lon="28.9645"
         data-scale="7"></div>
  </div>
  </div>
</div>

  </div>
</div>
