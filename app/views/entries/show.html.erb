  <div class="card">
    <div class="card-block">
      <div id='map-entry'
           data-center-lat="<%= @charge.map_center_latitude %>"
           data-center-lon="<%= @charge.map_center_longitude %>"
           data-scale="<%= @charge.map_scale %>"></div>
    </div>
  </div>
</div>