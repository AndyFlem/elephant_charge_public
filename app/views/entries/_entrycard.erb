
<div class="card">

    <div class="card-header">
        <a href="<%= entry_path entry %>">
      <h6><b><%= entry.car_no%></b> <%= entry.team.long_name %></h6>
      </a>
    </div>

  <div class="card-block" style="padding:5px;">
    <%= render :partial => 'photos/photo', :locals => {:photos => entry.photos} %>
  </div>
  <div class="card-block" style="text-align: center;padding-top:0px;">

    <% if entry.first_for_team? %>
      A new team for the <b><%= entry.charge.name%></b>
      <% unless entry.captain.empty? %>
         captained by <b><%= entry.captain %></b>
      <% end %>
    <% else %>

    <% end %>
  </div>
</div>