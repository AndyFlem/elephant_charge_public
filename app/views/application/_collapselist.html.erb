<% if items.count>show %>
  <div class="collapse-toggler">
    <a class="collapsed" data-toggle="collapse" href="#<%= list_id %>" aria-expanded="false" aria-controls="<%= list_id %>">
      <img data-toggle="tooltip" data-placement="top" title="expand" src="<%= image_path('icons/color/arrowdown.png') %>"/>
    </a>
  </div>
<% end %>
<ul style="list-style: none; padding-left:5px;">
  <%
    items.each_with_index do |e, i|
      if i<show
  %>
          <li>
            <%= yield e,i %>
          </li>
      <%
        end
        end
      %>

  <div class="collapse" id="<%= list_id %>">
    <%
      items.each_with_index do |e, i|
        if i>=show
    %>
            <li>
              <%= yield e,i %>
            </li>
        <%
          end
          end
        %>
  </div>
</ul>